<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:background="@color/black"
    tools:context="english.pj.SettingsActivity">

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:layout_marginTop="10dp"
    android:rowCount="12">


    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_row="0"
        android:onClick="onBackIm"
        android:background="@drawable/cancel"
        />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:layout_column="0"
        android:layout_gravity="start"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/imageViewSettingsAvatar"

        />


    <TextView
        android:id="@+id/textViewNickSettings"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_column="1"
        android:layout_row="1"
        android:gravity="center_vertical"
        android:text="Jack Narrator"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewLocationSettings"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_column="1"
        android:layout_row="2"
        android:gravity="center_vertical"
        android:text="Kiev, Ukraine"
        android:textColor="@color/grey"
        android:textSize="14sp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:srcCompat="@drawable/line_white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:id="@+id/imageViewSettingsLine"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/profile"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="4"
        android:onClick="onChangeProfile"
        android:id="@+id/imageViewSettingsProfile"/>

    <Button
        android:id="@+id/textViewProfileSettings"
        android:background="@color/transparent"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_row="4"
        android:gravity="center_vertical"
        android:text="Настройки профиля"
        android:onClick="onChangeProfile"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:background="@drawable/speakers_on"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="5"
        android:onClick="onSound"
        android:id="@+id/imageViewSettingsSound"/>

    <Button
        android:id="@+id/textViewSoundSettings"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_row="5"
        android:gravity="center_vertical"
        android:background="@color/transparent"
        android:text="Звук"
        android:onClick="onSound"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/info"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="6"
        android:onClick="onAbout"
        android:id="@+id/imageViewSettingsAbout"/>

    <Button
        android:id="@+id/textViewAboutSettings"
        android:background="@color/transparent"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_row="6"
        android:gravity="center_vertical"
        android:text="Об игре"
        android:onClick="onAbout"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/premium"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="7"
        android:onClick="onPremium"
        android:id="@+id/imageViewSettingsPrem"/>

    <Button
        android:id="@+id/textViewPremSettings"
        android:background="@color/transparent"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_row="7"
        android:gravity="center_vertical"
        android:text="Премиум версия"
        android:onClick="onPremium"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/help"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="8"
        android:onClick="onHelp"
        android:id="@+id/imageViewPremiumHelp"/>

    <Button
        android:id="@+id/textViewPremiumSettings"
        android:background="@color/transparent"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_row="8"
        android:gravity="center_vertical"
        android:text="Справка"
        android:onClick="onHelp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/star"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="9"
        android:onClick="onRate"
        android:id="@+id/imageViewRate"/>

    <Button
        android:id="@+id/textViewRate"
        android:background="@color/transparent"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_row="9"
        android:gravity="center_vertical"
        android:text="Поставить оценку"
        android:onClick="onRate"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/logout"
        android:onClick="onExitAccount"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="10"
        android:id="@+id/imageViewSettingsExit"/>

    <Button
        android:id="@+id/textViewExitSettings"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:layout_column="1"
        android:layout_row="10"
        android:gravity="center_vertical"
        android:text="Выход из аккаунта"
        android:onClick="onExitAccount"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />

</GridLayout>


</RelativeLayout>
