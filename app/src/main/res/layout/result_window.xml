<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
    android:background="@drawable/dialog_rounded_shape"
android:layout_height="wrap_content"
android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
tools:context="english.pj.PreGameActivity">
        <TextView
            android:id="@+id/textViewResultHeader"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/alert_header"
            android:gravity="center"
            android:text="Победа"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewResultHeader"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Поздравляем, вы победили Данила"
            android:textAlignment="center"
            android:textColor="@color/textgray"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewResult2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewResultHeader"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAlignment="center"
            android:textColor="@color/textgray"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageViewFireworks"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/fireworks" />

        <TextView
            android:id="@+id/textViewResult3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewResultHeader"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAlignment="center"
            android:textColor="@color/textgray"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonStatRes"
            android:layout_width="110dp"
            android:layout_height="50dp"

            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_green_selector"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/buttonRevansh"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_red_selector"
            android:text=" Реванш "
            android:textColor="@color/white"
            android:textSize="16dp" />

</LinearLayout>
