<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/fon_grad"
tools:context="english.pj.RankTableActivity">
<TextView
    android:text="Общий рейтинг"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:id="@+id/textViewRankTableHeader"
    android:gravity="center"
    android:textSize="22dp"
    android:textColor="@color/white"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="45dp" />

<ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textViewRankTableHeader"
    android:divider="@drawable/fon_grad"
    android:id="@+id/listViewRankTable"
    android:layout_marginStart="2dp"
    android:dividerHeight="3.0sp"
    android:layout_marginLeft="2dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    />

    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/transparentpartially"
        android:visibility="gone" >

        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/pbHeaderProgress"
            style="@style/Widget.AppCompat.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
    </LinearLayout>
</RelativeLayout>
