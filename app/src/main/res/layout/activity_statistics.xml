<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_statistics"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingStart="15dp"
android:paddingEnd="15dp"
android:background="@drawable/fon_stat"
tools:context="english.pj.StatisticsActivity">

<TextView
    android:id="@+id/textViewStatHeader"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:text="Статистика"
    android:textColor="@color/white"
    android:textSize="20dp"
    android:textStyle="normal|bold" />

<GridLayout
    android:layout_width="match_parent"
    android:columnCount="5"
    android:rowCount="15"
    android:id="@+id/grid1"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textViewStatHeader"
    >

    <TextView
        android:id="@+id/textView17"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_marginBottom="10dp"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:gravity="center_vertical"
        android:text="Победы:"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal|bold" />


    <ProgressBar
        android:layout_gravity="fill"
        android:layout_height="26dp"
        android:minHeight="8dp"
        android:maxHeight="8dp"
        android:alpha="0.25"
        android:id="@+id/progressBarWins"
        android:max="100"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:progress="50"
        android:layout_row="0"
        android:progressDrawable="@drawable/myprogress_line"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

    <TextView
        android:id="@+id/textViewWinsStat"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:paddingStart="5dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_marginBottom="10dp"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:gravity="center_vertical"
        android:text="Ничьи:"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal|bold" />


    <ProgressBar
        android:layout_gravity="fill"
        android:layout_height="26dp"
        android:minHeight="8dp"
        android:maxHeight="8dp"
        android:alpha="0.25"
        android:id="@+id/progressBarDraws"
        android:progressDrawable="@drawable/myprogress_line"
        android:max="100"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:progress="20"
        android:layout_row="2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

    <TextView
        android:id="@+id/textViewDrawsStat"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_row="2"
        android:paddingStart="5dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_marginBottom="15dp"
        android:layout_row="4"

        android:text="Поражения:  "
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal|bold" />

    <ProgressBar
        android:id="@+id/progressBarLosses"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_height="26dp"
        android:layout_width="match_parent"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_row="4"
        android:alpha="0.25"
        android:max="100"
        android:maxHeight="8dp"
        android:minHeight="8dp"
        android:progress="40"
        android:progressDrawable="@drawable/myprogress_line" />

    <TextView
        android:id="@+id/textViewLossesStat"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_row="4"
        android:paddingStart="5dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView197"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_marginEnd="3dp"
        android:layout_row="7"
        android:layout_rowSpan="1"
        android:gravity="center_vertical"
        android:text="Твое место:"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal|bold" />


    <TextView
        android:id="@+id/textViewRankPlace"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_column="1"

        android:layout_gravity="center"
        android:layout_row="7"
        android:layout_rowSpan="1"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="22sp"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@+id/textViewWinsRankPlaceFromTech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="7"
        android:layout_rowSpan="1"
        android:layout_gravity="center"
        android:text="из"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewRankPlaceFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_row="7"
        android:layout_rowSpan="1"
        android:text="1000"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView195"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_marginBottom="7dp"
        android:layout_row="10"
        android:layout_rowSpan="1"
        android:gravity="center_vertical"
        android:text="Твой словарный запас:"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_marginBottom="7dp"
        android:layout_row="11"
        android:layout_rowSpan="1"
        android:gravity="center_vertical"
        android:text="Доступно слов:"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/star"
        android:layout_column="0"
        android:layout_row="6"
        />



    <TextView
        android:id="@+id/textViewScores"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:layout_rowSpan="1"
        android:gravity="center_vertical"
        android:paddingStart="32dp"
        android:text="Очков:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_row="6"
        android:gravity="start"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/buttonRank"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_red_selector"
            android:gravity="center_vertical"
            android:onClick="onRankShow"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
android:visibility="gone"
            android:text="  Рейтинг  "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="8"
        android:gravity="center"
        android:layout_height="40dp">

        <Button
            android:id="@+id/buttonRank2"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_red_selector"
            android:gravity="center"
            android:onClick="onRankShow"
            android:layout_marginTop="5dp"
            android:text="Таблица лидеров"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_row="5"
        android:background="@drawable/divider"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:src="@drawable/divider"
        />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_row="9"
        android:background="@drawable/divider"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:src="@drawable/divider"
        />

    <TextView
        android:id="@+id/textViewVocab"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_column="4"
        android:layout_gravity="fill"
        android:layout_marginBottom="7dp"
        android:layout_row="10"
        android:layout_rowSpan="1"
        android:gravity="center_vertical"
        android:text="0"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textViewVocabAvailable"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_column="4"
        android:layout_gravity="fill"
        android:layout_marginBottom="7dp"
        android:layout_row="11"
        android:layout_rowSpan="1"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="12"
        android:gravity="center"
        android:layout_height="55dp">

        <Button
            android:id="@+id/buttonOpenWords"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_row="12"
            android:background="@drawable/btn_red_selector"
            android:gravity="center_vertical"
            android:onClick="onOpenWords"
            android:paddingBottom="7dp"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:paddingTop="7dp"
            android:text="открыть ВСЕ слова"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>



</GridLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_below="@+id/grid1"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button9"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_transp_selector"
        android:onClick="backToMain"
        android:text="Вернуться"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>


    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/transparentpartially"
        android:visibility="gone" >

        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/pbHeaderProgress"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ProgressBar>
    </LinearLayout>


</RelativeLayout>
