<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/fon_grad"
android:paddingTop="10dp"
tools:context="english.pj.ShowVsEnemyActivity"
android:onClick="onClickAny"
android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClickAny"
    android:orientation="vertical">



<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="50"
    android:onClick="onClickAny"
    android:id="@+id/imageViewAvatar1"
    android:layout_marginBottom="10dp"/>

    <RelativeLayout
    android:id="@+id/LinearLayoutFive3"
    android:layout_width="match_parent"
    android:onClick="onClickAny"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

        <Button
            android:id="@+id/btnFivePlayers"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:onClick="onClickAny" />


</RelativeLayout>



<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="50"
    android:layout_gravity="left"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:onClick="onClickAny"
    android:id="@+id/imageViewAvatar2" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewVSPl2poin"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textViewVSPl1pp"
                android:layout_width="105dp"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:text="Рейтинг:  "
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textViewVSPl2pofin"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewVSPlfin"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="vs"
                android:textColor="@color/red"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewVSPl223ocab"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textViewVSPl2ireo2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="Словарный запас:"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textViewVSPl223ab"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="3">






    </GridLayout>

</RelativeLayout>
