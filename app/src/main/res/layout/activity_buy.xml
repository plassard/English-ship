<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    android:background="@drawable/fon_stat"
    tools:context="english.pj.BuyActivity">

    <TextView
        android:text="Премиум версия"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/textViewHelpHeader"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:background="#858ec7"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Хочешь быть крутым перцем или крутой чиксой?"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Купи ПРЕМИУМ версию и ты станешь круче в следующих вещах:"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewAllWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="- тебе будет открыт доступ ко всем словам;"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="- не будет надоедливой рекламы;"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="- после каждого неправильного ответа, тебе будет выводиться пример употребления такого слова в контексте английского предложения с переводом на русский язык, это очень сильно помогает запоминать незнакомые слова;"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewCan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Купить"
        android:background="@drawable/btn_red_selector"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:onClick="onBuy" />

</LinearLayout>
