<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="16dp"

android:background="@drawable/fon_grad"

tools:context="english.pj.FindActivity">
<TextView
    android:id="@+id/textViewFrHeader"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:text="Поиск соперника"
    android:textColor="@color/white"
    android:textSize="22dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="45dp"
    android:gravity="center"
    android:orientation="horizontal">
    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Друзья"
        android:layout_marginEnd="10dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_red_selector"/>
    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="Найти по имени"
        android:onClick="onFind2"
        android:background="@drawable/btn_transp_selector"/>
</LinearLayout>


<TextView
    android:text="   Ваши друзья:"
    android:layout_marginTop="60dp"
    android:layout_below="@+id/textViewFrHeader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView20"
    android:textColor="@color/white"
    android:textSize="14sp" />

<ListView
    android:layout_width="match_parent"
    android:id="@+id/listViewFriends"
android:layout_marginStart="10dp"
    android:layout_below="@+id/textView20"

    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_height="200dp" />




</RelativeLayout>
